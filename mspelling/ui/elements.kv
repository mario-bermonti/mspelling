#:set message_size dp(35)

<ThemedLayout@MDBoxLayout>:
    orientation: "vertical"
    size_hint: (0.6, 0.75)
    pos_hint: {"center_x": 0.5, "center_y": 0.60}
    spacing: dp(10)
    # md_bg_color: (1, 0, 0, 1)

<ThemedLabel@MDLabel>:
    font_size: message_size
    size_hint: (1, .2)
    halign: "center"

<ThemedButton@MDRaisedButton>:
    font_size: message_size
    size_hint: (1, .1)
    pos_hint: {"center_x": .5, "center_y": .5}

<ThemedTextInput@MDTextFieldRect>:
    font_size: message_size
    multiline: False
    halign: "center"
    size_hint: (1, .1)
